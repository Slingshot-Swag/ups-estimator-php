<phpunit bootstrap="vendor/autoload.php" colors="true">
    <php>
      <env name="IS_RUNNING_PHPUNIT" value="true"/>
    </php>
    <testsuites>
        <testsuite name="Unit">
            <directory suffix="Test.php">./tests/Unit</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist>
            <directory>lib</directory>
        </whitelist>
    </filter>
</phpunit>